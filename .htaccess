<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Force HTTPS + WWW (single redirect)
  RewriteCond %{HTTPS} off [OR]
  RewriteCond %{HTTP_HOST} !^www\. [NC]
  RewriteRule ^ https://www.playabacusindia.com%{REQUEST_URI} [R=301,L]

  DirectoryIndex index.html
  
  # Custom 404 Page
  ErrorDocument 404 /404.html
</IfModule>

# Prevent directory listing
Options -Indexes

# Handle PHP access (Allow mail and diagnostic scripts)
<FilesMatch "\.php$">
  <IfModule mod_authz_core.c>
    # Apache 2.4
    <If "%{REQUEST_URI} =~ m#/(mail|mail_debug|smtp_diag)\.php$#">
      Require all granted
    </If>
    <Else>
      Require all denied
    </Else>
  </IfModule>
  <IfModule !mod_authz_core.c>
    # Apache 2.2
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# Fallback for older servers if previous rules fail
<Files "mail.php">
  Order allow,deny
  Allow from all
  Satisfy any
</Files>
<Files "mail_debug.php">
  Order allow,deny
  Allow from all
  Satisfy any
</Files>
<Files "smtp_diag.php">
  Order allow,deny
  Allow from all
  Satisfy any
</Files>

# Enable Gzip Compression (mod_deflate)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

# Optional: Set long cache headers for static files (improves performance)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1 day"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  # HSTS (Strict-Transport-Security) - 1 year
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # Other Security Headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# --- CORS for JSON files (restricted to arkakids.com + creativeartsindia.in) ---
<IfModule mod_headers.c>
  <FilesMatch "\.(json)$">
    # Allow arkakids.com
    SetEnvIf Origin "https://arkakids\.com$"   AccessControlAllowOrigin=$0
    # Allow creativeartsindia.in
    SetEnvIf Origin "https://creativeartsindia\.in$"   AccessControlAllowOrigin=$0
    # Apply CORS only if matched
    Header always set Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Methods "GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
  </FilesMatch>
</IfModule>
