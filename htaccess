<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  DirectoryIndex index.html
</IfModule>

# Prevent directory listing
Options -Indexes

# Block access to any PHP files (optional but recommended for security)
<FilesMatch "\.php$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Optional: Set long cache headers for static files (improves performance)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1 day"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
</IfModule>

# Optional: Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# --- CORS for JSON files (restricted to arkakids.com + creativeartsindia.in) ---
<IfModule mod_headers.c>
  <FilesMatch "\.(json)$">
    # Allow arkakids.com
    SetEnvIf Origin "https://arkakids\.com$"   AccessControlAllowOrigin=$0
    # Allow creativeartsindia.in
    SetEnvIf Origin "https://creativeartsindia\.in$"   AccessControlAllowOrigin=$0
    # Apply CORS only if matched
    Header always set Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Methods "GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
  </FilesMatch>
</IfModule>
